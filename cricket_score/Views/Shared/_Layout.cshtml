<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cricket_score</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Match.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/cricket_score.styles.css" asp-append-version="true" />
</head>
<body>
    <header>     
        <nav class="navbar navbar-expand-lg" style="background-color:#131e29">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">crex</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                       
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="series">series</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="Home" asp-action="Fixtures">Fixtures</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="stats corner">stats corner</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ranking">ranking</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>







        <footer _ngcontent-app-root-c12="" class="b-footer fixed-bottom">
        <div _ngcontent-app-root-c12="" class="container">
                <a _ngcontent-app-root-c12="" href="#" class="navbar-brand footer-CElogo">
                    <img _ngcontent-app-root-c12="" src="./../../assets/logo/logo2.webp" alt="ce11-fantasy"> CREX
                </a>
            <div _ngcontent-app-root-c12="" class="footer-link flex-row" style="display:flex; justify-content:space-around; width:100%">
                    <ul _ngcontent-app-root-c12="">
                        <li _ngcontent-app-root-c12=""><a _ngcontent-app-root-c12="" href="/about">About</a></li>
                        <li _ngcontent-app-root-c12=""><a _ngcontent-app-root-c12="" href="/grievance">Grievance</a></li>
                        <li _ngcontent-app-root-c12="" class="r-shift"><a _ngcontent-app-root-c12="" href="/refund-policy">Refund Policy</a></li>
                    </ul>
                    <ul _ngcontent-app-root-c12="" class="position-relative">
                        <li _ngcontent-app-root-c12="" class="r-shift"><a _ngcontent-app-root-c12="" href="/privacy-policy">Privacy Policy</a></li>
                        <li _ngcontent-app-root-c12="" class="r-shift"><a _ngcontent-app-root-c12="" href="/terms-and-conditions">Terms and Conditions</a></li>
                        <li _ngcontent-app-root-c12="" class="r-shift"><a _ngcontent-app-root-c12="" href="/contact-us">Contact Us</a></li>
                    </ul>
                </div>
            </div>
        </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
